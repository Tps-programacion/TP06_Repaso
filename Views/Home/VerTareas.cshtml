<header>
    <h1>Tareas de @ViewBag.Usuario.Nombre</h1>
</header>

<div class="task-list-container">
    @foreach (Tarea item in ViewBag.tareas)
    {
        <div class="task-item">
            <h2>@item.Titulo</h2>
            <p>@item.Descripcion</p>
            <p>Fecha: @item.Fecha.ToString("dd/MM/yyyy")</p>
            @if (item.Finalizada)
            {
                <p>Estado: FINALIZADA</p>
            }
            else
            {
                <p>Estado: PENDIENTE</p>
            }
            <div class="task-actions">
                <a href='@Url.Action("modificarTarea", "Home", new { idTarea = @item.IDTarea })'>Modificar tarea</a>
                <a href='@Url.Action("eliminarTarea", "Home", new { idTarea = @item.IDTarea })'>Eliminar tarea</a>
            </div>
        </div>
    }
</div>