@{
    ViewData["Title"] = "Modificar Tarea";
    var tarea = ViewBag.tareaAModificar;
}
<header>Modificar Tarea</header>
<div class="container">
    <form method="post" action="/Home/modificarTareaGuardar">
        <input type="hidden" name="idTarea" value="@tarea.IDTarea">

        <label>Título</label>
        <input type="text" name="titulo" value="@tarea.Titulo" required>

        <label>Descripción</label>
        <textarea name="descripcion" rows="4" required>@tarea.Descripcion</textarea>

        <label>Fecha</label>
        <input type="date" name="fecha" value="@tarea.Fecha.ToString("yyyy-MM-dd")" required>

        <button type="submit">Modificar</button>
    </form>
</div>